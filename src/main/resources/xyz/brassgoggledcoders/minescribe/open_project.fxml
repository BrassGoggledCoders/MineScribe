<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="xyz.brassgoggledcoders.minescribe.controller.OpenProjectController"
            prefHeight="200.0" prefWidth="400.0" fx:id="anchorPane"
>
    <GridPane alignment="CENTER" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0">
        <VBox prefWidth="100" prefHeight="100" spacing="10">
            <HBox alignment="CENTER">
                <Button prefHeight="64" prefWidth="64" onAction="#findProject">
                    <graphic>
                        <FontIcon iconLiteral="mdal-create_new_folder" iconSize="64"/>
                    </graphic>
                </Button>
            </HBox>
            <Text>
                New Project from Folder
            </Text>
        </VBox>

    </GridPane>
</AnchorPane>

